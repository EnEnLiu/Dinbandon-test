<h1><%= @item.name%></h1>

<ul>
  <li>
    價格：<%= @item.price %>元
  </li>
  <li>
    <p>介紹：</p>
    <%= @item.description %>
  </li>
  <li>
    <p>備註：</p>
    <%= @item.spec %>
  </li>
</ul>

<hr>
<h3>留言</h3>
<%= form_for(@comment, url: item_comments_path(@item)) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, class: 'form-control' %>
  </div>
  <%= form.submit class: 'btn btn-success' %>
<% end %> 

<hr>


<ul>
  <% @comments.each do |comment| %>
    <div class="alert alert-dark" role="alert">
    <p><%= comment.content %></p>
    <hr>
    <p class="mb-0">posted by<%= comment.user.email%>/<%= comment.created_at %></p>
    </div>
  <% end %>
</ul>